#SlideBar > QPushButton {
    margin: 0;
    text-align: left;
    padding: 5px 15px;
    border: none;
    outline: none;
}

#SlideBar > QPushButton:hover {
    background-color: #404040;
}

#SlideBar > QPushButton:checked {
    font-weight: 500;
    background-color: #2B2B2B;
    border: 1px solid #2B2B2B;
    border-left: none;
    border-right: 5px;
}

#IconButton {
    background: transparent;
    outline: none;
    border: none;
}

#IconButton:hover {
    background: #4D4D4D;
}

#IconButton:pressed {
    background: #616161;
}

QTableView {
    alternate-background-color: transparent;
    background-color: transparent;
    border: none;
}

QTableView::item:selected {
    background-color: red
}

QHeaderView::section {
    background-color: rgb(255, 255, 255);
    border: none;
    height: 32px;
    font-style: normal;
    font-weight: normal;
    font-size: 15px;
}

QHeaderView::section:horizontal {
    border-bottom: 1px solid #F2F2F2;
    border-right: 1px solid #F2F2F2;
    padding-left: 15px;
}

QScrollBar {
    background-color: transparent;
}

QProgressBar {
    background-color: #717171;
    border: none;
}

QProgressBar::chunk {
    background-color: #0078D7;
}
